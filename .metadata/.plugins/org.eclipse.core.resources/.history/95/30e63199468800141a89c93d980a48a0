package rulePack;

import java.util.Hashtable;

/************************************************************************
 * Hashtable in this class holds the conditions. Rules can use these
 * conditions to check the feeder
 ***********************************************************************/

public class clRuleConditions {
//		Hashtable<String, HashMap<String, String>> ruleCondTable;
		Hashtable<String, IFConditions> ruleCondTable;	
	
	public clRuleConditions(){
		ruleCondTable = new Hashtable<String, IFConditions>();
	}
	
	public void addCondition(String ruleName, clClassCondition ruleConds){
//		ruleAtt = ruleCondTable.get(ruleName);
		
//		if(ruleAtt == null)
//			ruleAtt = new IFRule();
		
//			ruleAtt.put(attribute, value);
			
			//Requires sequence number(?)
			ruleCondTable.put(ruleName,  ruleConds);
	}
	
	public clClassCondition getRuleMap(String ruleName){
		return ruleCondTable.get(ruleName);
	}
	
	/*public Hashtable<String, clClassCondition> getCondTable(){
		return ruleCondTable;
	}*/
}
